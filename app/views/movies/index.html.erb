<div class="container">
  <form action="#" class="mb-3">
    <div class="row">
      <div class="col">
        <input type="text" class="form-control" placeholder="Type your keywords here" name="query" value="<%= params[:query] %>">
      </div>
    </div>
    <div class="row">
      <div class="col">
        <input type="number" class="form-control mt-3" placeholder="Min range year" name="min_year" value="<%= params[:min_year] %>">
      </div>
       <div class="col">
        <input type="number" class="form-control mt-3" placeholder="Max range year" name="max_year" value="<%= params[:max_year] %>">
      </div>
    </div>
    <div class="row">
      <div class="col">
        <input type="submit" class="btn btn-primary btn-block mt-3">
      </div>
    </div>
  </form>

  <div class="row justify-content-center">
    <div class="col-sm-8">
      <div id="movies">
        <% @movies.each do |movie| %>
          <h4><%= movie.title %> (<%= movie.year %>)</h4>
          <h5>Director: <%= movie.director_full_name %></h5>
          <p><%= movie.synopsis %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>